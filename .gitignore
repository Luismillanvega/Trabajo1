CREATE OR REPLACE TRIGGER tri_inicial

before INSERT ON tb_a

FOR EACH ROW

DECLARE

  inicial CHAR(1);

BEGIN

  inicial := SUBSTR(:NEW.nombre_p, 1, 1);

  IF inicial = 'd' THEN

    INSERT INTO tb_b (des)

    VALUES ('producto agregado y empieza con d  ' || TO_CHAR(SYSDATE, 'YYYY-MM-DD HH:MM:SS'));

  END IF;

END;
